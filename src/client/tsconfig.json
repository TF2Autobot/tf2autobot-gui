{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": "./",
    "rootDir": "./",
    "removeComments": true,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": ["./types/modules",
      "../../node_modules/@types"
    ]
  },

  "exclude": [
    "../../node_modules", "**/__mocks__/*", "**/__tests__/*", "../../node_modules/@types/webpack/index.d.ts"
  ],
  "include": [
    "./"
  ]
}
